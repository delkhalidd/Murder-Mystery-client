{
  "name": "murder-mystery-client",
  "version": "1.0.0",
  "description": "Client application for Murder Mystery educational game",
  "main": "app.js",
  "type": "module",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "jest": "^29.5.0",
    "jsdom": "^21.1.2",
    "live-server": "^1.2.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "./__test__/helpers.js"
    ],
    "collectCoverageFrom": [
      "static/js/**/*.js",
      "routes.js",
      "app.js"
    ]
  },
  "scripts": {
    "start": "node app.js",
    "dev": "live-server",
    "server": "nodemon app.js",
    "test": "jest --watchAll",
    "coverage": "jest --coverage"
  }
}
